    <template title="ragtek_mm_list" version_id="13" version_string="1.1.0 PL1"><![CDATA[<xen:title>{xen:phrase ragtek_multimods}</xen:title>
        <ul class="secondaryContent blockLinksList">
            <xen:if is="{$multimods}">
            <xen:foreach loop="$multimods" value="$mod">
                <li class="listItem PopupItemLink">
                  <a href="{xen:link 'threads/run-multi-mod', $thread, 'mod_id={$mod.multimod_id}'}" class="OverlayTrigger PreviewTooltip" data-previewurl="{xen:link 'threads/get-multiMod-description' , $thread, 'mod_id={$mod.multimod_id}'}">{$mod.title}</a>
                </li>
            </xen:foreach>
                <xen:else />
                {xen:phrase ragtek_mm_nothing_available}
            </xen:if>
        </ul>]]></template>
    <template title="ragtek_mm_multimod" version_id="13" version_string="1.1.0 PL1"><![CDATA[<xen:if is="{$show_multimods}">

    <div class="pageNavLinkGroup">
